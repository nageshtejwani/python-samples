
#For generating trangle pattern like below
#with hardcode values 
#          * 
#        * * * 
#      * * * * * 
#    * * * * * * * 
#  * * * * * * * * * 


def printSpaces(a):
   for x in range(1,a+1) :
     print(" ", end= " ")
        
def printStars(a):
   for x in range(1,a+1) :
     print("*", end= " ")


k=5
m=k
rowcount=0
while m !=0 :
  printSpaces(m)
  m=m-1
  printStars(rowcount+(k-m))
  rowcount=rowcount+1
  print()
